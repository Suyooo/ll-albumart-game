{
    "extends": "./node_modules/@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "paths": {
            "$actions": ["./src/actions"],
            "$actions/*": ["./src/actions/*"],
            "$data": ["./src/data"],
            "$data/*": ["./src/data/*"],
            "$icon": ["./src/icon"],
            "$icon/*": ["./src/icon/*"],
            "$lib": ["./src/lib"],
            "$lib/*": ["./src/lib/*"],
            "$modules": ["./src/modules"],
            "$modules/*": ["./src/modules/*"],
            "$stores": ["./src/stores"],
            "$stores/*": ["./src/stores/*"]
        }
    },
    "include": ["./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.test.ts", "./src/**/*.js", "./src/**/*.svelte"]
}
